<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<div class='mt-4'>
    <div class='container'>
        <h3>Update Information</h3>
        <form method='POST' action='/user/<%= userData.id %>?_method=PUT'>
            <div class='form-group'>
                <label class="mt-4" for='firstName'>First Name</label>
                <input type='text' class='form-control' value="<%= userData.firstName %>" id='firstName' name='firstName' />
            </div>
            <div class='form-group'>
                <label class="mt-4" for='lastName'>Last Name</label>
                <input type='text' class='form-control' value="<%= userData.lastName %>" id='lastName' name='lastName' />
            </div>
            <div class='form-group'>
                <label class="mt-4" for='email'>Email</label>
                <input type='email' class='form-control' value="<%= userData.email %>" id='email' name='email' />
            </div>

            <button type='submit' class='btn btn-primary mt-4'>Save</button>
        </form>
        <a href="/">List users</a>
    </div>
</div>

